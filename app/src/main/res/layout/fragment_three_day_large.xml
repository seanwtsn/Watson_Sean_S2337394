<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.WeatherApp.Default"
    tools:context=".ThreeDayLargeFragment">


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="27dp"

        android:layout_height="27dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/icon_uv"
        app:layout_constraintBottom_toBottomOf="@+id/wind_speed_text_one"
        app:layout_constraintStart_toEndOf="@+id/wind_speed_text_one" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:text="@string/_3_day_forecast"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:drawableBottomCompat="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/wind_speed_text_one"
        android:layout_width="64dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:text="14mph"
        android:textColor="@color/white"

        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintStart_toEndOf="@+id/imageView5" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginStart="12dp"

        android:src="@drawable/icon_direction"
        app:layout_constraintBottom_toBottomOf="@+id/wind_dir_text_one"
        app:layout_constraintStart_toEndOf="@+id/wind_dir_text_one"
        app:layout_constraintTop_toBottomOf="@+id/temperature_text_one"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/humidity_text_one"
        android:layout_width="40dp"
        android:layout_height="27dp"
        android:text="80%"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/icon_humidity"
        app:layout_constraintStart_toEndOf="@+id/temperature_text_one"
        app:layout_constraintTop_toTopOf="@+id/temperature_text_one" />

    <TextView
        android:id="@+id/temperature_text_one"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="Text"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/temperature_icon_one"
        app:layout_constraintTop_toBottomOf="@+id/day_one_text" />

    <ImageView
        android:id="@+id/temperature_icon_one"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginStart="84dp"
        android:importantForAccessibility="no"
        android:src="@drawable/icon_thermometer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/condition_icon_one" />

    <TextView
        android:id="@+id/uv_text_one"
        android:layout_width="40dp"
        android:layout_height="27dp"
        android:text="80%"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.263"
        app:layout_constraintStart_toEndOf="@+id/imageView7" />

    <TextView
        android:id="@+id/wind_dir_text_one"
        android:layout_width="40dp"
        android:layout_height="27dp"

        android:layout_marginStart="8dp"
        android:text="NW"
        android:textColor="@color/white"

        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/wind_speed_icon_one"
        app:layout_constraintStart_toEndOf="@+id/wind_speed_icon_one" />

    <ImageView
        android:id="@+id/wind_speed_icon_one"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginStart="84dp"
        android:src="@drawable/icon_wind"
        app:layout_constraintBottom_toBottomOf="@+id/condition_icon_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temperature_icon_one" />

    <TextView
        android:id="@+id/day_one_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Day"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/condition_icon_one"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="87dp"
        android:src="@drawable/icon_sun_norays"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />





</androidx.constraintlayout.widget.ConstraintLayout>